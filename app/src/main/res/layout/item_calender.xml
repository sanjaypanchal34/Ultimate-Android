<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_40sdp"
    android:layout_height="@dimen/_34sdp"
    android:padding="@dimen/_5sdp"
    android:id="@+id/ln_date"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/teko_s_b"
        android:gravity="center"
        android:text="Sun"
        android:textColor="#000000"
        android:textSize="@dimen/_16ssp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="@dimen/_3sdp"
            android:layout_height="@dimen/_3sdp"
            android:layout_marginHorizontal="@dimen/_2ssp"
            android:id="@+id/iv_training"
            android:src="@drawable/calender_training_indicator" />
        <ImageView
            android:visibility="gone"
            android:layout_width="@dimen/_3sdp"
            android:layout_height="@dimen/_3sdp"
            android:id="@+id/iv_event"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:src="@drawable/calender_event_indicator" />
    </LinearLayout>
</LinearLayout>