<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/coach_grd"
    android:orientation="vertical"
    android:padding="@dimen/_15sdp">

    <ImageButton
        android:id="@+id/ib_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@android:color/transparent"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/ic_clear" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/teko_b"

        android:lineSpacingExtra="-30dp"
        android:text="09\nSeptember\n2022"
        android:textColor="@color/white"
        android:textSize="@dimen/_40ssp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50ffffff" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_events"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:layout_weight="1"
        tools:itemCount="3"
        tools:listitem="@layout/item_trainig" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#50ffffff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp">
        <!--<TextView
            android:id="@+id/btn_view"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="#BB1433"
            android:drawableEnd="@drawable/ic_eye"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/teko_b"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/view_detail"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />-->
        <TextView
            android:id="@+id/btn_add_event"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginEnd="@dimen/_2sdp"
            android:background="#BB1433"
            android:drawableEnd="@drawable/coach_forward"
            android:drawablePadding="@dimen/_15sdp"
            android:fontFamily="@font/teko_b"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/add_match"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

        <TextView
            android:id="@+id/btn_add_training"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_32sdp"
            android:layout_marginStart="@dimen/_2sdp"
            android:background="#BB1433"
            android:drawableEnd="@drawable/coach_forward"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/teko_b"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_10sdp"
            android:text="@string/add_training"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp" />

    </LinearLayout>
</LinearLayout>