<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CoachLoginActivity">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:actualImageResource="@drawable/new_bg"
        app:actualImageScaleType="centerCrop" />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:src="@drawable/new_toolbar_logo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_logo"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/_10sdp"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold" />
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:fontFamily="@font/teko_s_b"
        android:textColor="@color/white"
        android:text="Your Email"
        android:gravity="center"
        android:textSize="@dimen/_16ssp"
        android:textColorHint="#50ffffff"
        android:textAllCaps="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/teko_s_b"
        android:inputType="textEmailAddress"
        android:id="@+id/edt_email"
        android:paddingHorizontal="@dimen/_10sdp"
        android:theme="@style/editTextCursorBlack"
        android:textAllCaps="true"
        android:textCursorDrawable="@drawable/cursor_black"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:fontFamily="@font/teko_r"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/_10sdp"
        android:text="Your Password"
        android:gravity="center"
        android:id="@+id/tv_password"
        android:textSize="@dimen/_16ssp"
        android:textColorHint="#50ffffff"
        android:textAllCaps="true"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_20sdp"
        android:background="@color/white"
        android:layout_marginTop="@dimen/_5sdp"
        android:fontFamily="@font/teko_s_b"
        android:inputType="textPassword"
        android:id="@+id/edt_pass"
        android:paddingHorizontal="@dimen/_10sdp"
        android:textAllCaps="true"
        android:textCursorDrawable="@drawable/cursor_black"
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:fontFamily="@font/teko_s_b"
        android:textColor="@color/white"
        android:text="@string/forgot_password"
        android:gravity="center"
        android:layout_marginVertical="@dimen/_20sdp"
        android:id="@+id/tv_forgot_password"
        android:textSize="@dimen/_16ssp"
        android:textColorHint="#50ffffff"
        android:textAllCaps="true"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:fontFamily="@font/teko_s_b"
        android:textColor="@color/white"
        android:text="Login into Account"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/rect_white_border"
        android:gravity="center"
        android:id="@+id/tv_login"
        android:textSize="@dimen/_20ssp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:textColorHint="#50ffffff"
        android:textAllCaps="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OR"
        android:textSize="@dimen/_16ssp"
        android:id="@+id/tv_or"
        android:fontFamily="@font/teko_r"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="@dimen/_10sdp"
        android:textColor="@color/white"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_45sdp"
        android:layout_marginHorizontal="@dimen/_25sdp"
        android:fontFamily="@font/teko_s_b"
        android:textColor="@color/white"
        android:text="Create Account"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rect_white_border"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_30sdp"
        android:id="@+id/tv_create_acc"
        android:textSize="@dimen/_20ssp"
        android:textColorHint="#50ffffff"
        android:textAllCaps="true"/>
</LinearLayout>

    <ImageButton
        android:layout_width="@dimen/_35sdp"
        android:layout_height="@dimen/_35sdp"
        android:src="?attr/homeAsUpIndicator"
        android:background="#00000000"
        android:id="@+id/ib_back"
        android:layout_margin="@dimen/_10sdp"
        android:tint="@color/white"/>
</RelativeLayout>