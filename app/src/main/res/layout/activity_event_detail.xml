<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.EventDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?homeAsUpIndicator"
        app:theme="@style/coachToolbarStyle" />


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_3sdp"
        android:background="@drawable/coach_grd"
        android:padding="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/teko_s_b"
                android:text="@string/match_details"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_25ssp" />

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                app:actualImageScaleType="fitCenter"
                app:placeholderImage="@drawable/ig_ground"
                android:id="@+id/iv_event" />

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:text="VS"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_20ssp"/>

                <TextView
                    android:id="@+id/tv_vs"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="6"
                    android:fontFamily="@font/teko_s_b"
                    android:textAllCaps="true"
                    android:textColor="@color/off_white"
                    android:textSize="@dimen/_18ssp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:text="@string/date"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_20ssp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textColor="@color/off_white"
                    android:textAllCaps="true"
                    android:id="@+id/tv_date"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_18ssp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:text="@string/time"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_20ssp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textColor="@color/off_white"
                    android:textAllCaps="true"
                    android:id="@+id/tv_time"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_18ssp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:text="@string/venue"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_20ssp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:textColor="@color/off_white"
                    android:textAllCaps="true"
                    android:id="@+id/tv_venue"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_18ssp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:textColor="@color/white"
                    android:textAllCaps="true"
                    android:text="@string/score"
                    android:fontFamily="@font/teko_s_b"
                    android:textSize="@dimen/_20ssp"/>

               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="6">
                   <TextView
                       android:layout_width="@dimen/_100sdp"
                       android:layout_height="match_parent"
                       android:textColor="@color/white"
                       android:textAllCaps="true"
                       android:id="@+id/tv_score"
                       android:background="@drawable/rect_white_border"
                       android:paddingHorizontal="@dimen/_20sdp"
                       android:layout_gravity="center_vertical"
                       android:gravity="center_vertical"
                       android:fontFamily="@font/teko_s_b"
                       android:textSize="@dimen/_18ssp"/>
               </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/goalscores"
                android:textAllCaps="true"
                android:fontFamily="@font/teko_s_b"
                android:textSize="@dimen/_20ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/off_white"
                android:textAllCaps="true"
                android:id="@+id/tv_goal_score"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/teko_s_b"
                android:textSize="@dimen/_18ssp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/assists"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_s_b"
                android:textSize="@dimen/_20ssp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/off_white"
                android:textAllCaps="true"
                android:id="@+id/tv_assists"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/teko_s_b"
                android:textSize="@dimen/_18ssp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="@string/player_of_match"
                android:textAllCaps="true"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/teko_s_b"
                android:textSize="@dimen/_20ssp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/off_white"
                android:textAllCaps="true"
                android:paddingHorizontal="@dimen/_10sdp"
                android:background="@drawable/rect_white_border"
                android:id="@+id/tv_player_of_match"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/teko_s_b"
                android:textSize="@dimen/_18ssp"/>
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>